<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
     <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
</head>
<body>
    <div class="container">
      <h2>Chi tiết</h2>

      {{!-- <form action="/comics/add" method="post" enctype="multipart/form-data"> --}}

        <table class="table">
          <thead>
            <tr>
              <th scope="col">Tên Truyện</th>
              <th scope="col">Mô Tả Ngắn</th>
              <th scope="col">Tác Giả</th>
              <th scope="col">Năm Xuất Bản</th>
              <th scope="col">Ảnh</th>
              <th scope="col">Ảnh PDF</th>
            
            </tr>
          </thead>
          <tbody>
            {{#comic}}
              <tr>
                <td>{{this.title}}</td>
                <td>{{this.description}}</td>
                <td>{{this.author}}</td>
                <td>{{this.publishYear}}</td>
                <td><img src="{{this.images}}" width="50" /></td>
                <td>
                  <iframe
                    src="{{this.content_img}}"
                    width="40%"
                    height="200px"
                  ></iframe>
                </td>
                <td>
                  <a class="btn btn-danger" href="/edit/{{this.id}}">Sửa</a>
                  <a class="btn btn-success" href="/api/comics/delete/{{this.id}}">Xoá</a>

                  <a class="btn btn-info" href="/chitiet/{{this.id}}">Chi Tiết</a>
                </td>
              </tr>
            {{/comic}}
          </tbody>
          {{!-- <a class="btn btn-success" href="/api/comics/add">Thêm</a> --}}
        </table>

<h2>Bình luận</h2>
        <table class="table">
          <thead>
            <tr>
              <th scope="col">STT</th>
              <th scope="col">user id</th>
              <th scope="col">tên truyện</th>
              <th scope="col">nội dung</th>
              <th scope="col">create at</th>
            
            </tr>
          </thead>
          <tbody>
            {{#each comments}}
              <tr>
                <th scope="row">{{@index}}</th>
                <td>{{this.userId}}</td>
                <td>{{this.comicId}}</td>
                <td>{{this.content}}</td>
                <td>{{this.createAt}}</td>
                
                <td>
                  <a class="btn btn-danger" href="/edit/{{this.id}}">Sửa</a>
                  <a class="btn btn-success" href="/api/comics/delete/{{this.id}}">Xoá</a>

                  <a class="btn btn-info" href="/chitiet/{{this.id}}">Chi Tiết</a>
                </td>
              </tr>
            {{/each}}
          </tbody>
          <a class="btn btn-success" href="/api/comics/add">Thêm</a>
        </table>

      {{!-- </form> --}}
    </div>
</body>
</html>