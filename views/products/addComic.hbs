<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </head>
  <body>
     <div class="container"></div>
    <h1>Nhập thông tin Truyện Tranh ADM</h1>
    <form action="/api/comics" method="post" enctype="multipart/form-data">
     
     <div class="form-group">
        <input    class="form-control" type="text" name="title" id="title" placeholder="Nhập Tiêu Đề" required>
     </div>

    <div class="form-group">
        <input    class="form-control" type="text" name="description" id="description" placeholder="Nhập mô tả" required>
     </div>

      <div class="form-group">
        <input    class="form-control" type="text" name="author" id="author" placeholder="Nhập tác giả" required>
     </div>

      <div class="form-group">
        <input    class="form-control" type="number" name="publishYear" id="publishYear" placeholder="Nhập năm xuất bản" required>
     </div>

      <div class="form-group">
        <input    class="form-control" type="file" name="images" id="images" placeholder="Nhập ảnh" required>
     </div>

      <div class="form-group">
        <input    class="form-control" type="file" name="content_img" id="content_img" placeholder="Nhập ảnh PDF" required>
     </div>
     
    <button type="submit" class="btn btn-success">Thêm</button>
    <a href="/api/comics" class="btn btn-warning">Trở Lại</a>
    </form>

 </div>
  </body>
</html>